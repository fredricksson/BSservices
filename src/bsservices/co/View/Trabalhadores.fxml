            <Label alignment="CENTER" contentDisplay="BOTTOM" prefHeight="44.0" prefWidth="226.0" text="Trabalhadores" textFill="#7bbec3">
               <font>
                  <Font name="Arial Rounded MT Bold" size="17.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="45.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../icons/icons8-collaborating-in-circle-50.png" />
