<VBox fx:id="vbox" prefHeight="700.0" prefWidth="800.0" stylesheets="@../css/estilo.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bsservices.co.Controller.TrabalhadoresController">
